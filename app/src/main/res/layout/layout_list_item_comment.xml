<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_head_rv_item_comment"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:background="@drawable/test_head"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_username_rv_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv_head_rv_item_comment"
                android:text="username"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_location_rv_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_head_rv_item_comment"
                android:layout_toRightOf="@+id/iv_head_rv_item_comment"
                android:text="北京"
                android:textColor="@color/black"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_pubDate_rv_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_head_rv_item_comment"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/tv_location_rv_item_comment"
                android:text="2015-03-16 16:20"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_good_rv_item_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:drawableRight="@drawable/ic_thumb"
                android:gravity="center"
                android:text="6554"
                android:textSize="10sp" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_content_rv_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp" />

    </LinearLayout>

</android.support.v7.widget.CardView>